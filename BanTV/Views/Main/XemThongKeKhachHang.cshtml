@model IEnumerable<BanTV.Models.HoaDon>;
@{
    ViewData["Title"] = "Thống kê theo khách hàng";
}
<br />
<br />
<br />
<br />

<h1 class="text-info">Thống kê theo khách hàng</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="XemThongKeKhachHang">
            <div class="form-group">
                <label>Email khách hàng</label> <input type="email" name="emailkhachhang" />
            </div>
            <div class="form-group">
                <input class="btn btn-info my-1" type="submit" value="Thống kê" />
            </div>
        </form>
    </div>
</div>

<hr />
<h5>Thông tin khách hàng</h5>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Mã khách hàng
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ttkhachhang.Makh
        </dd>
        <dt class="col-sm-2">
            Tên khách hàng
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ttkhachhang.Ten
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ttkhachhang.Email
        </dd>
        <dt class="col-sm-2">
            Điện thoại
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ttkhachhang.Dienthoai
        </dd>
    </dl>
</div>
<label>Doanh thu từ khách hàng: @ViewData["tongtien"] đ</label>
<hr />

<div class="border border-secondary">
    <table class="table">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã hóa đơn</th>
                <th>Ngày lập</th>
                <th>Tổng tiền</th>
            </tr>
        </thead>
        <tbody>
            @{
                int stt = 1;
                foreach (HoaDon hd in Model)
                {
                        <tr>
                            <td>@stt</td>
                            <td>@hd.Mahd</td>
                            <td>@hd.Ngay</td>
                            <td>@hd.Tongtien</td>
                            <td>
                                <a class="btn btn-success" asp-action="ChiTietHoaDonTheoKhachHang" asp-route-id="@hd.Mahd">
                                    Chi tiết
                                </a>
                            </td>
                        </tr>
                    stt++;
                }
            }
        </tbody>
    </table>
</div>