@model IEnumerable<BanTV.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="row text-center">
    <div class="d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <h5 class="card-title fw-semibold mb-4">Quản lý nhân viên</h5>
                <div class="table-responsive">
                    <td class="border-bottom-0">
                        <div class="d-flex align-items-center gap-2">
                            <span class="badge bg-primary rounded-3 fw-semibold "><a class="text-white" asp-action="Create">Thêm nhân viên</a></span>
                        </div>
                    </td>
                    <table class="table text-nowrap mb-0 align-middle">
                        <thead class="text-dark fs-4">
                            <tr>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0 text-center">Tên nhân viên</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">điện thoại</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Email</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Quyền</h6>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td class="border-bottom-0"><h6 class="fw-semibold mb-0">@Html.DisplayFor(modelItem => item.Ten)</h6></td>
                                <td class="border-bottom-0">
                                    <p class="mb-0 fw-normal">@Html.DisplayFor(modelItem => item.Dienthoai)</p>
                                </td>
                                <td class="border-bottom-0">
                                    <p class="mb-0 fw-normal">@Html.DisplayFor(modelItem => item.Email)</p>
                                </td>
                                <td class="border-bottom-0">
                                    <p class="mb-0 fw-normal">@Html.DisplayFor(modelItem => item.Quyen)</p>
                                </td>
                                <td class="border-bottom-0">
                                    <span class="badge bg-secondary rounded-3 fw-semibold"> <a class="text-white" asp-action="Edit" asp-route-id="@item.Manv"> Sửa</a></span>

                                    <span class="badge bg-success rounded-3 fw-semibold"> <a class="text-white" asp-action="Details" asp-route-id="@item.Manv">Xem</a></span>
                                    <span class="badge bg-danger rounded-3 fw-semibold"><a class="text-white" asp-action="Delete" asp-route-id="@item.Manv">Xóa</a></span>

                                </td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
