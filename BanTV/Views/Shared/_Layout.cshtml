<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
   
    <link rel="shortcut icon" type="image/png" href="/../assets/images/logos/favicon.png" />
    <link rel="stylesheet" href="/../assets/css/styles.min.css" />
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">

        <!-- Sidebar Start -->
        <aside class="left-sidebar">

            <!-- Sidebar scroll-->
            <div>
                </br>
                <div>
                  
                    <a class="navbar-brand d-flex align-items-center px-4 px-lg-5" asp-action="Index" asp-controller="Main">
                        <h2 class="m-0 text-primary"><i class="bi bi-shop-window"></i> Cửa hàng TV</h2>
                    </a>
                </div>

                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                        @if (ViewBag.nhanvien.Quyen == 1)
                        {
                            <li class="nav-small-cap">
                                <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                                <span class="hide-menu">Trang quản lý </span>
                            </li>

                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-action="Index" asp-controller="DanhMucs">

                                    <span class="hide-menu">Quản lý danh mục</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-action="Index" asp-controller="MatHangs">

                                    <span class="hide-menu">Quản lý sản phẩm</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-action="Index" asp-controller="KhachHangs">

                                    <span class="hide-menu">Quản lý khách hàng</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-action="Index" asp-controller="NhanViens">

                                    <span class="hide-menu">Quản lý nhân viên</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-controller="Main" asp-action="Quanlyhangton" aria-expanded="false">

                                    <span class="hide-menu">Quản lý hàng tồn</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-controller="Main" asp-action="ThongKeMatHangTheoNgay" aria-expanded="false">

                                    <span class="hide-menu">SP đã bán theo ngày</span>
                                </a>
                            </li>



                            <li class="nav-small-cap">
                                <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                                <span class="hide-menu">Thống kê doanh thu</span>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-action="ThongKeTheoNgay" asp-controller="Main" aria-expanded="false">

                                    <span class="hide-menu">Doanh thu theo ngày</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-action="ThongKeKhachHang" asp-controller="Main" aria-expanded="false">

                                    <span class="hide-menu">Doanh thu theo khách hàng</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-action="ThongKeTheoMatHang" asp-controller="Main" aria-expanded="false">

                                    <span class="hide-menu">Doanh thu theo mặt hàng</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-action="Tongdoanhthu" asp-controller="Main" aria-expanded="false">

                                    <span class="hide-menu">Tổng doanh thu</span>
                                </a>
                            </li>
                        }
                        else
                        {

                            @if (ViewBag.nhanvien.Quyen == 0)
                            {
                                <li class="nav-small-cap">
                                    <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                                    <span class="hide-menu">Quản lý hóa đơn</span>
                                </li>
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-controller="Main" asp-action="HoaDonChuaDuyet" aria-expanded="false">

                                        <span class="hide-menu">Hóa đơn chưa duyệt</span>
                                    </a>
                                </li>
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-controller="Main" asp-action="HoaDonDaDuyet" aria-expanded="false">

                                        <span class="hide-menu">Hóa đơn đã duyệt</span>
                                    </a>
                                </li>
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-controller="Main" asp-action="HoaDonDaHuy" aria-expanded="false">

                                        <span class="hide-menu">Hóa đơn đã hủy</span>
                                    </a>
                                </li>
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-controller="Main" asp-action="HoaDonDagiao" aria-expanded="false">

                                        <span class="hide-menu">Hóa đơn đã giao</span>
                                    </a>
                                </li>
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-controller="Main" asp-action="HangHoanTra" aria-expanded="false">

                                        <span class="hide-menu">Đơn hàng đã hoàn trả</span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-controller="Main" asp-action="HoaDonCanGiao" aria-expanded="false">

                                        <span class="hide-menu">Hóa đơn cần giao</span>
                                    </a>
                                </li>
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-controller="Main" asp-action="HoaDonDaHuy" aria-expanded="false">

                                        <span class="hide-menu">Hóa đơn đã hủy</span>
                                    </a>
                                </li>
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-controller="Main" asp-action="HoaDonDagiao" aria-expanded="false">

                                        <span class="hide-menu">Hóa đơn đã giao</span>
                                    </a>
                                </li>
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-controller="Main" asp-action="HangHoanTra" aria-expanded="false">

                                        <span class="hide-menu">Đơn hàng đã hoàn trả</span>
                                    </a>
                                </li>
                            }
                        }



                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-action="Logout" asp-controller="Home">
                                <i class="align-middle" data-feather="check-square"></i> <span class="align-middle">ĐĂNG XUẤT</span>
                            </a>
                        </li>
                    </ul>
                </nav>

            </div>

        </aside>
        <div class="body-wrapper">
            <header class="app-header">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <ul class="navbar-nav">
                        <li class="nav-item d-block d-xl-none">
                            <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                                <i class="ti ti-menu-2"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-icon-hover" href="javascript:void(0)">
                                <i class="ti ti-bell-ringing"></i>
                                <div class="notification bg-primary rounded-circle"></div>
                            </a>
                        </li>
                    </ul>
                    <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
                        <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
                            <li class="nav-item dropdown">
                                <a class="nav-link nav-icon-hover" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    <img src="../assets/images/profile/user-1.jpg" alt="" width="35" height="35" class="rounded-circle">
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                                    <div class="message-body">
                                    <!--   <a class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-user fs-6"></i>
                                            <p class="mb-0 fs-3">Trang chủ</p>
                                        </a>
                                        <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-mail fs-6"></i>
                                            <p class="mb-0 fs-3">My Account</p>
                                        </a>
                                        <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-list-check fs-6"></i>
                                            <p class="mb-0 fs-3">My Task</p>
                                        </a> --> 
                                        <a asp-action="Logout" asp-controller="Home" class="btn btn-outline-primary mx-3 mt-2 d-block">Logout</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <div class="container-fluid">
                <div>
                    @RenderBody()
                </div>

            </div>
        </div>
    </div>
    <script src="/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/sidebarmenu.js"></script>
    <script src="/assets/js/app.min.js"></script>
    <script src="/assets/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="/assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="/assets/js/dashboard.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>