            </div>
            <div class="carousel-item">
                <img src="~/quảng cáo/800-200-800x200-45.png" alt="Chất lượng ảnh siêu nét" class="d-block w-100" />
            </div>
            <div class="carousel-item">
                <img src="~/quảng cáo/800-200-800x200-65.png" alt="Chất lượng ảnh siêu nét" class="d-block w-100" />
            </div>
            <div class="carousel-item">
                <img src="~/quảng cáo/800-200-800x200-69.png" alt="Chất lượng ảnh siêu nét" class="d-block w-100" />
            </div>
            <div class="carousel-item">
                <img src="~/quảng cáo/800x200--1--800x200-3.png" alt="Chất lượng ảnh siêu nét" class="d-block w-100" />
            </div>
            <div class="carousel-item">
                <img src="~/quảng cáo/800x200-800x200-15.png" alt="Chất lượng ảnh siêu nét" class="d-block w-100" />
            </div>
            <div class="carousel-item">
                <img src="~/quảng cáo/800x200-800x200-19.png" alt="Chất lượng ảnh siêu nét" class="d-block w-100" />
            </div>


        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>


    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-white mb-3">Liên kết</h4>
